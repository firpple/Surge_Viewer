<form method="POST">
    <div>Topic name contains: <input name="TopicName" /></div>
    <input type="submit" />
</form>
@{
    string queryString = "";
    string[] topicList;
    if (IsPost)
    {
        var topicString = Request.Form["TopicName"];
        var tempQueryTools = new MVC5App.Scripts.Test.QueryTools();
        queryString = tempQueryTools.findTopicWithString(topicString, "%");
        topicList = queryString.Split('%');

        <body>
            Topics that contain @topicString
        </body>
        <table style="width:100%">
            @foreach (string topic in topicList)
            {
                <tr><th> @topic</th></tr>
            }
        </table>

    }

}


