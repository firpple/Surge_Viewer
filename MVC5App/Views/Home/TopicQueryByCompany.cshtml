


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CompanyQueryByTopic</title>
</head>
<body>
    <div>
    </div>
</body>
</html>
<form method="get">
    <div>Exact Company Name: <input name="companyName" /></div>
    <input type="submit" />
</form>
@{
    string queryString = "";
    string[] topicList;
    if (!((string)ViewData["companyName"]).IsEmpty())
    {
        var companyString = (string)ViewData["companyName"];
        var tempQueryTools = new MVC5App.Scripts.Test.QueryTools();
        queryString = tempQueryTools.returnTopicFromCompanyWithScore(companyString, "%");
        topicList = queryString.Split('%');
        var ScoreString = "";
        var topic = "";
        
        @:@companyString is interested in:
        
        <table style="width:100%">
            @for(int index = 0; index < topicList.Length - 1; index +=2)
            {
                topic = topicList[index];
                ScoreString = topicList[index + 1];
            <tr><th><a href="~/Home/PlotData?companyName=@companyString&topicName=@topic">@topic @ScoreString</a></th></tr>
            }
        </table>
        
    }

}