


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CompanyQueryByTopic</title>
</head>
<body>
    <div>
    </div>
</body>
</html>
<form method="POST">
    <div>Exact Topic Name: <input name="topicName" /></div>
    <input type="submit" />
</form>
@{
    string queryString = "";
    string[] companyList;
    if (IsPost)
    {
        var topicString = Request.Form["topicName"];
        var tempQueryTools = new MVC5App.Scripts.Test.QueryTools();
        var ScoreString = "";
        var company = "";
        queryString = tempQueryTools.returnCompanyFromTopicWithScore(topicString, "%");
        companyList = queryString.Split('%');

        <body>
            Companies that are interested in @topicString
        </body>
        <table style="width:100%">
            @for (int index = 0; index < companyList.Length - 1; index += 2)
            {
                company = companyList[index];
                ScoreString = companyList[index + 1];
                <tr><th><a href="~/Home/PlotData?companyName=@company&topicName=@topicString">@company @ScoreString</a></th></tr>
            }
        </table>

    }

}